<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.jeogiyo.member.dao.MemberDAO">
	<!-- 리절트 맵 정의 -->
	<resultMap id="memberResult" type="memberVO">
		<result property="member_id" column="member_id" />
		<result property="member_type" column="member_type"/>
		<result property="member_pw" column="member_pw" />
		<result property="nick_name" column="nick_name"/>
		<result property="hp" column="hp" />
		<result property="del_yn" column="del_yn"/>
	</resultMap>

	<select id="login" resultType="memberVO" parameterType="java.util.Map">
		<![CDATA[
			select * from member
			where member_id=#{member_id}
			and member_pw=#{member_pw}
		]]>
	</select>

	<select id="selectOverlappedID" parameterType="java.util.Map" resultType="String">
		<![CDATA[
			select decode(count(*),1,'true',0,'false')
			from member
			where member_id=#{id} and member_type=#{type}
		]]>
	</select>

	<select id="insertNewMember" parameterType="memberVO" >
		<![CDATA[
			insert into member(member_id,member_type,member_pw,nick_name,hp)
							 values(#{member_id},
							        #{member_type},
									#{member_pw},
							        #{nick_name},
							        #{hp})

		]]>
	</select>


	

</mapper>